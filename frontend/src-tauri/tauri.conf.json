{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Stasis",
    "version": "2.4.0",
    "identifier": "com.arsh.stasis",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Stasis",
                "width": 1100,
                "height": 700,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "publisher": "Arsh Sisodiya",
        "copyright": "Copyright Â© 2025 Arsh Sisodiya",
        "shortDescription": "Digital Wellbeing for Windows",
        "longDescription": "Stasis is a Digital Wellbeing app that tracks your activity, blocks distracting websites, and sends Telegram notifications.",
        "license": "nsis/license.txt",
        "windows": {
            "nsis": {
                "installerHooks": "nsis/installer.nsh",
                "displayLanguageSelector": false,
                "installMode": "perMachine"
            },
            "webviewInstallMode": {
                "type": "downloadBootstrapper",
                "silent": true
            }
        },
        "resources": {
            "bin/stasis-backend.exe": "bin/stasis-backend.exe"
        },
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}